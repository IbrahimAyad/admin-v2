{
  "name": "kct-menswear-backend-v2",
  "version": "0.0.1",
  "description": "KCT Menswear e-commerce backend powered by Medusa",
  "author": "KCT Menswear",
  "license": "MIT",
  "keywords": [
    "medusa",
    "ecommerce",
    "headless",
    "typescript",
    "railway"
  ],
  "scripts": {
    "build": "echo 'Medusa v1 - no build step required'",
    "seed": "medusa seed -f ./data/seed.ts",
    "start": "medusa start",
    "start:custom": "node --preserve-symlinks --trace-warnings index.js",
    "dev": "medusa develop",
    "test": "jest",
    "migration:run": "medusa migrations run",
    "migration:revert": "medusa migrations revert",
    "migration:show": "medusa migrations show",
    "migration:generate": "medusa migrations generate",
    "postinstall": "medusa telemetry --enable || true",
    "kct:setup": "npm run migration:run && npm run seed",
    "kct:reset": "npm run migration:run && npm run seed",
    "kct:dev": "npm run migration:run && npm run dev",
    "kct:verify": "node scripts/verify-deployment.js",
    "kct:test-all": "node scripts/complete-integration-test.js",
    "kct:test-stripe": "curl -X POST http://localhost:9000/stripe/create-payment-intent -H \"Content-Type: application/json\" -d \"{\\\"amount\\\": 2999}\"",
    "kct:test-products": "curl http://localhost:9000/store/products | jq"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/s3-request-presigner": "^3.450.0",
    "@easypost/api": "^6.8.0",
    "@medusajs/admin": "^7.1.14",
    "@medusajs/cache-inmemory": "^1.8.10",
    "@medusajs/cache-redis": "^1.9.1",
    "@medusajs/event-bus-local": "^1.9.8",
    "@medusajs/event-bus-redis": "^1.8.13",
    "@medusajs/file-local": "^1.0.4",
    "@medusajs/medusa": "^1.20.6",
    "@medusajs/ui": "^2.4.2",
    "@tanstack/react-query": "^4.22.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.2",
    "google-auth-library": "^9.4.0",
    "jsonwebtoken": "^9.0.2",
    "medusa-fulfillment-manual": "^1.1.40",
    "medusa-interfaces": "^1.3.9",
    "medusa-payment-manual": "^1.0.24",
    "medusa-payment-stripe": "^6.0.6",
    "pg": "^8.11.0",
    "redis": "^4.6.13",
    "resend": "^3.2.0",
    "typeorm": "^0.3.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/preset-typescript": "^7.21.4",
    "@medusajs/medusa-cli": "^1.3.22",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^17.0.8",
    "babel-preset-medusa-package": "^1.1.19",
    "cross-env": "^7.0.3",
    "eslint": "^6.8.0",
    "jest": "^27.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "^4.9.4"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.spec.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/node_modules/"
    ],
    "rootDir": "src",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=18"
  }
}